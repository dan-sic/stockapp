{
  "name": "stock-app-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "android": "npm run android -w @stock-app/mobile",
    "dev:web": "npm run dev -w @stock-app/web",
    "dev:automation": "npm run dev -w @stock-app/automation",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:web": "npm run build -w @stock-app/web",
    "build:automation": "npm run build -w @stock-app/automation",
    "start:web": "npm run start -w @stock-app/web",
    "db:generate": "npm run db:generate -w @stock-app/db",
    "db:migrate": "npm run db:migrate -w @stock-app/db",
    "db:studio": "npm run db:studio -w @stock-app/db",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "tsc --build --force"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
