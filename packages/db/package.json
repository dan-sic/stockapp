{
  "name": "@stock-app/db",
  "version": "0.1.0",
  "private": true,
  "types": "./db.ts",
  "exports": {
    ".": {
      "types": "./db.ts",
      "require": "./dist/db.js",
      "import": "./dist/db.js",
      "default": "./db.ts"
    },
    "./schema": {
      "types": "./schema.ts",
      "require": "./dist/schema.js",
      "import": "./dist/schema.js",
      "default": "./schema.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "drizzle-kit": "^0.31.8"
  }
}
